#include <stdio.h>
#include <stdarg.h>
#define NULL ((void *)0) /*Take this out to the main.h check it works*/
/**
 * _printf - prints formatted output with some specifiers
 * THESE TESTS ARE MEANT TO COPY PASTE IN PROGRAMMIZ
 * REAL TEST CAN BE DONE LATER
 * @format: pointer to the only fixed string argument
 * Return: integer, number of bytes printed
 */
int _printchar(char **fmt, int current_n_by)
{
	putchar(**fmt);
	current_n_by += 1;
	return (current_n_by);
}

int _printf(const char *format, ...)
{
	char **add_fmt = &format;
	int i = 0, n_by = 0;
	va_list pt;

	if (format != NULL)
	{
		va_start(pt, format);
		while (*format != '\0')
		{
			if (*format != '%')
				n_by = _printchar(add_fmt, n_by); /*made short for betty*/
			else
			{
				format++;
				switch (*format)
				{
				case 'c':
					printf("%c", va_arg(pt, int)); /*_putchar directly.*/
					break;
				case 's':
					printf("%s", va_arg(pt, char *));
					break;
				case '%':
					printf("%");
					n_by += 1;
					break;
				case 'i':
				case 'd':
					printf("%d", va_arg(pt, int));
					break;
				default:
					format++; /*Tested on programmiz. it escapes undefined spec.*/
					break;
				}
			}
			format++;
		}
		va_end(pt);
	}
	return (n_by);
}

int main()
{
	char *format = NULL;
	_printf(format);
}
